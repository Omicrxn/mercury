{
	"name": "@omicrxn/mercury",
	"version": "0.5.1",
	"description": "Mercury is a Svelte animation library using AnimeJS under the hood. It simplifies complex animations with Svelte actions, provides layout and exit animations, and integrates seamlessly with Svelte features.",
	"license": "MIT",
	"keywords": [
		"svelte",
		"animation",
		"animejs",
		"layout-animations",
		"framer-motion",
		"exit-animations",
		"svelte-action",
		"svelte-animations"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Omicrxn/mercury.git"
	},
	"author": "Alejandro Avila (Omicrxn)",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "npx oxlint@latest && prettier --check .",
		"format": "prettier --write ."
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"publishConfig": {
		"registry": "https://registry.npmjs.org/"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"gsap": "^3.13.0",
		"svelte": "^5.0.0"
	},
	"peerDependenciesMeta": {
		"gsap": {
			"optional": true
		}
	},
	"devDependencies": {
		"@lucide/svelte": "^0.513.0",
		"@sveltejs/adapter-auto": "^6.0.1",
		"@sveltejs/kit": "^2.21.1",
		"@sveltejs/package": "^2.3.11",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tailwindcss/postcss": "^4.1.7",
		"@tailwindcss/typography": "^0.5.16",
		"@types/eslint": "^9.6.1",
		"@types/node": "^24.0.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.9.0",
		"globals": "^16.2.0",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.4.0",
		"publint": "^0.3.12",
		"runed": "^0.28.0",
		"svelte": "^5.33.4",
		"svelte-check": "^4.2.1",
		"tailwind-variants": "^1.0.0",
		"tailwindcss": "^4.1.7",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.33.0",
		"vite": "npm:rolldown-vite@latest"
	},
	"dependencies": {
		"@layout-projection/animation": "^0.17.0",
		"@layout-projection/core": "^0.17.0",
		"animejs": "^4.0.2",
		"motion": "^12.15.0",
		"oxlint": "^1.0.0",
		"uuid": "^11.1.0",
		"vite-plugin-oxlint": "^1.3.3"
	}
}
